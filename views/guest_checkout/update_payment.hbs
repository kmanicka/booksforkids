
<div class="page-header">
  <h3>Guest Checkout <small>${data.checkoutSessionId}</small></h3>
  <p>Provide Payment Information</p>
</div>


<div class="row">
	<form class="form-horizontal" role="form"
		action="@{GuestCheckout.updateGuestPaymentInfoAction()}" method="post">

		<div class="col-lg-8">

			<div class="panel panel-info">
				<div class="panel-heading">Payment Method</div>
				<div class="panel-body">

					<div class="container">
						<input type="hidden" name="checkoutSessionId"
							value="${data.checkoutSessionId}">
						<fieldset>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="credit-card-brand">Card
								</label>
								<div class="col-sm-4">
									<div class="row">
										<div class="col-xs-6">
											<select class="form-control col-sm-2" name="brand"
												id="credit-card-brand">
												<option>Card</option>
												<option value="MASTERCARD">MASTER CARD</option>
												<option value="VISA">VISA</option>
												<option value="AMERICAN_EXPRESS">AMERICAN EXPRESS</option>
												<option value="DISCOVER">DISCOVER</option>
											</select>
										</div>
									</div>
								</div>
							</div>


							<div class="form-group">
								<label class="col-sm-2 control-label" for="card-holder-name">Name
									on Card</label>
								<div class="col-sm-4">
									<input type="text" class="form-control"
										name="accountHolderName" id="card-holder-name"
										placeholder="Card Holder's Name">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="card-number">Card
									Number</label>
								<div class="col-sm-4">
									<input type="text" class="form-control" name="cardNumber"
										id="card-number" placeholder="Debit/Credit Card Number">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="expiry-month">Expiration
									Date</label>
								<div class="col-sm-4">
									<div class="row">
										<div class="col-xs-4">
											<select class="form-control col-sm-2" name="expireMonth"
												id="expiry-month">
												<option>Month</option>
												<option value="01">Jan (01)</option>
												<option value="02">Feb (02)</option>
												<option value="03">Mar (03)</option>
												<option value="04">Apr (04)</option>
												<option value="05">May (05)</option>
												<option value="06">June (06)</option>
												<option value="07">July (07)</option>
												<option value="08">Aug (08)</option>
												<option value="09">Sep (09)</option>
												<option value="10">Oct (10)</option>
												<option value="11">Nov (11)</option>
												<option value="12">Dec (12)</option>
											</select>
										</div>
										<div class="col-xs-4">
											<select class="form-control" name="expireYear">
												<option value="2017">2017</option>
												<option value="2018">2018</option>
												<option value="2019">2019</option>
												<option value="2020">2020</option>
												<option value="2021">2021</option>
												<option value="2022">2022</option>
												<option value="2023">2023</option>
												<option value="2024">2024</option>
												<option value="2025">2025</option>
												<option value="2026">2026</option>
												<option value="2027">2027</option>
												<option value="2028">2028</option>
												<option value="2029">2029</option>
											</select>
										</div>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="cvv">Card CVV</label>
								<div class="col-sm-2">
									<input type="text" class="form-control" name="cvvNumber"
										id="cvv" placeholder="Security Code">
								</div>
							</div>
						</fieldset>
					</div>
				</div>
			</div>


		</div>

		<div class="col-lg-4">

			<div class="panel panel-info">
				<div class="panel-body">
					<!-- input type="submit" class="btn btn-primary btn-lg btn-block"
										name="Update Payment" value="Continue" -->
					<a class="btn btn-primary btn-lg btn-block" href="/guest_checkout/review">Continue</a>

				</div>
			</div>

			<div class="panel panel-default">
				<div class="panel-body">

					<table class="table table-hover">

						<thead>
							<tr><th>Checkout Summary</th></tr>
						</thead>
						<tbody>

							<tr>
								<td>#{list items:data.lineItems, as:'item'} <a
									href="@{Application.item(item.itemId)}" class="thumbnail">
										<img src="${item.image}" alt="${item.title}">
								</a> <a href="@{Application.item(item.itemId)}">${item.title}</a> </a>
									<p>Quantity : TBD</p> #{/list}
								</td>
							</tr>

							<tr>
								<td>

									<h4>Shipping Method</h4> #{list
									items:data.lineItems.get(0).shippingOptions, as:'option'} #{if
									option.selected}
									<div class="checkbox">
										<label> <input type="checkbox" checked>
											${option.shippingServiceName}| $ ${option.baseDeliveryCost}
										</label>
									</div> #{/if} #{/list}

								</td>
							</tr>
							<tr>
								<td>

									<h4>Shipping Address</h4>
									<p>${data.shippingAddress.recipient}</p>
									<p>${data.shippingAddress.addressLine1}</p>
									<p>${data.shippingAddress.city},
										${data.shippingAddress.stateOrProvince},
										${data.shippingAddress.postalCode},
										${data.shippingAddress.country}</p>
									<p>${data.shippingAddress.phoneNumber}</p>

								</td>
							</tr>
							<tr>
								<td>

									<h4>Pricing</h4>
									<table class="table table-condensed">
										<tr>
											<th>Sub total</th>
											<th>$ ${data.pricingSummary.priceSubtotal}</th>
										</tr>
										<tr>
											<th>Delivery Cost</th>
											<th>$ ${data.pricingSummary.deliveryCost}</th>
										</tr>
										<tr>
											<th>Tax</th>
											<th>$ ${data.pricingSummary.tax}</th>
										</tr>
										<tr>
											<th>Adjustment</th>
											<th>$ ${data.pricingSummary.adjustment}</th>
										</tr>
										<tr>
											<th>Total</th>
											<th>$ ${data.pricingSummary.total}</th>
										</tr>

									</table>

								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>








		</div>
	</form>

</div>


<div class="row">
	<div class="col-lg-12">
		<div class="well">${data.jsonObject}</div>
	</div>
</div>