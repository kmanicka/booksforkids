

<div class="page-header">
  <h3>Guest Checkout <small>{{data.checkoutSessionId}}</small> </h3>
  <p>Review your order</p>
</div>



<div class="row">
	<div class="col-lg-8">
			
			<table class="table table-striped table-condensed table-bordered">
				<tbody>
				
				<tr><td>
				
					<h4>Items</h4>

				</td></tr><tr><td>

				<div class="row">
					<div class="col-lg-4">
						<a href="/browse/item/{{data.lineItems.0.itemId}}" class="thumbnail">
							<img src="{{data.lineItems.0.image.imageUrl}}">
						</a>
					</div>
					<div class="col-lg-8">
						<a href="/browse/item/{{data.lineItems.0.itemId}}">{{data.lineItems.0.title}}</a>
						<p>seller : {{data.lineItems.0.seller.username}}</p>
					</div>
				</div>
	
				</td></tr><tr><td>

					<h4>Shipping Method</h4>
				
				</td></tr><tr><td>

				{{#each data.lineItems.0.shippingOptions}}
					{{#if this.selected}}
					<div class="checkbox">
						<label> <input type="checkbox" checked>
							{{this.shippingServiceName}} $ {{this.baseDeliveryCost.value}}
						</label>
					</div>
					{{/if}}
				{{/each}}

				</td></tr><tr><td>
					<h4>Shipping Address</h4>
				
				</td></tr><tr><td>

				<p>{{data.shippingAddress.recipient}}</p>
				<p>{{data.shippingAddress.addressLine1}}</p>
				<p>{{data.shippingAddress.city}},
					{{data.shippingAddress.stateOrProvince}},
					{{data.shippingAddress.postalCode}}, {{data.shippingAddress.country}}</p>
				<p>{{data.shippingAddress.phoneNumber}}</p>

				</td></tr><tr><td>

					<h4>Payment Information</h4>

				</td></tr>

				<tr><td>
				
				<p>Payment Type : {{data.providedPaymentInstrument.paymentMethodType}}</p>
				<p>Brand : {{data.providedPaymentInstrument.paymentMethodBrand.paymentMethodBrandType}}</p>
				<p>Reference : xxxx-xxxx-xxxx-{{data.providedPaymentInstrument.paymentInstrumentReference.lastFourDigitForCreditCard}}</p>

				</td></tr> 
			</tbody>
			</table>
	</div>


	<div class="col-lg-4">

		<div class="panel panel-info">
			<div class="panel-body">
				<a href="/guest_checkout/place_order/{{data.checkoutSessionId}}"
					class="btn btn-primary btn-lg btn-block">Complete</a>
			</div>
		</div>

		<div class="panel panel-default">
			<div class="panel-body">

				<table class="table table-hover table-borderless">

					<thead>
						<tr colspan="2">
							<th>Pricing</th>
						</tr>
					</thead>
					<tbody>

						<tr>
							<th>Sub total</th>
							<th>$ {{data.pricingSummary.priceSubtotal.value}}</th>
						</tr>
						<tr>
							<th>Delivery Cost</th>
							<th>$ {{data.pricingSummary.deliveryCost.value}}</th>
						</tr>
						<tr>
							<th>Tax</th>
							<th>$ {{data.pricingSummary.tax.value}}</th>
						</tr>
						<tr>
							<th>Adjustment</th>
							<th>$ {{data.pricingSummary.adjustment.value}}</th>
						</tr>
						<tr class="info">
							<th>Total</th>
							<th>$ {{data.pricingSummary.total.value}}</th>
						</tr>

					</tbody>
				</table>
			</div>
		</div>

	</div>
	</form>

</div>


<div class="row">
	<div class="col-lg-12">
		<div class="well">${data.jsonObject}</div>
	</div>
</div>