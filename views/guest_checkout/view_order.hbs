<div class="page-header">
	<h1>
		Congratulations!! <small> Your order was successful. ${	data.purchaseOrderId}</small>
	</h1>
</div>



<div class="row">
	<div class="col-lg-8">
			
			<table class="table table-striped table-condensed table-bordered">
				<tbody>
				
				<tr><td>
				
					<h4>Items</h4>

				</td></tr><tr><td>
				#{list items:data.lineItems, as:'item'}

				<div class="row">
					<div class="col-lg-4">
						<a href="@{Application.item(item.itemId)}" class="thumbnail">
							<img src="${item.image}" alt="${item.title}">
						</a>
					</div>
					<div class="col-lg-8">
						<a href="@{Application.item(item.itemId)}">${item.title}</a> </a>
						<p>Quantity : TBD</p>
					</div>
				</div>
				#{/list}
	
				</td></tr><tr><td>

					<h4>Order Status</h4>

				</td></tr><tr><td>

				<p>Purchase Order Status : ${data.purchaseOrderStatus}</p>
				<p>purchaseOrderPaymentStatus : ${data.purchaseOrderPaymentStatus}</p>

				</td></tr>
			</tbody>
			</table>
	</div>


	<div class="col-lg-4">

		<div class="panel panel-default">
			<div class="panel-body">

				<table class="table table-hover">

					<thead>
						<tr>
							<th>Pricing</th>
						</tr>
					</thead>
					<tbody>

						<tr>
							<th>Sub total</th>
							<th>$ ${data.pricingSummary.priceSubtotal}</th>
						</tr>
						<tr>
							<th>Delivery Cost</th>
							<th>$ ${data.pricingSummary.deliveryCost}</th>
						</tr>
						<tr>
							<th>Tax</th>
							<th>$ ${data.pricingSummary.tax}</th>
						</tr>
						<tr>
							<th>Adjustment</th>
							<th>$ ${data.pricingSummary.adjustment}</th>
						</tr>
						<tr>
							<th>Total</th>
							<th>$ ${data.pricingSummary.total}</th>
						</tr>

					</tbody>
				</table>
			</div>
		</div>

	</div>
	</form>

</div>


<div class="row">
	<div class="col-lg-12">
		<div class="well">${data.jsonObject}</div>
	</div>
</div>
